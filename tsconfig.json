{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015"
    ],
    "allowJs": true,
    "jsx": "react",
    "outDir": "app/dist",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "chokidar": ["@types/chokidar"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "app/main.ts",
    "app/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
